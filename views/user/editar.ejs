<h2>Modificar cuenta: </h2>

<form method="post" action="/user/<%= user.id%>?_method=put">
	<% if(session.user.id === user.id){ %>
	<p> Cambiar contraseña </p>
	<label for="resp" class ="rem"> Introducir nueva contraseña: </label>
	<input type="password" id="pass" name="user[password]"/><p>

	<input type="submit" value="Actualizar">
	<a href="/"><button type="button"> Cancelar </button></a
</form>
	
<form method="post" action="user/<%=user.id %>?_method=delete">
		  <button type="submit" onClick="return confirm('Borrar: <%= user.username%>');">
			Eliminar cuenta
	          </button>
	<%} else {%>
		<p> Aquí no tenemos el perfil de <strong>tu madre</strong>
	
	<% } %>
</form>
